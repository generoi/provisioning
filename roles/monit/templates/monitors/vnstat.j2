# {{ ansible_managed }}
check process vnstat with pidfile /var/run/vnstat.pid
  start program = "/etc/init.d/vnstat start"
  stop program  = "/etc/init.d/vnstat stop"

  if cpu > 10% for 2 cycles then alert
  if cpu > 20% for 5 cycles then restart
  if totalmem > 50.0 MB for 5 cycles then restart
  if 3 restarts within 5 cycles then timeout
